<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AsiloLiraWeb</title>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AsiloLiraWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header >
        <nav class="navbar navbar-light border-bottom" style="background:transparent; border:0px;">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Marca a la izquierda -->
                <a class="navbar-brand d-flex align-items-center gap-0 mb-0" asp-controller="Home" asp-action="HomeIndex">
                    <img src="~/imagenes/monjaIconSinFondo.png" alt="Logo" width="100" height="60" class="d-inline-block align-text-top">
                    <span class="text2">Asilo Lira</span>
                </a>

                <!--Botonn team lira-->
                <div class="d-flex align-items-center">
                    <!-- Botón TEAM LIRA -->
                    <a class="btn me-4 button3 p-1" asp-controller="Home" asp-action="Formulario">TEAM LIRA</a>

                    <!-- Botón hamburguesa -->
                    <button class="navbar-toggler button4" style="border:solid 1px #4b4b4b;" type="button" data-bs-toggle="offcanvas" data-bs-target="#menuLateral"
                            aria-controls="menuLateral" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">  </span>
                    </button>
                </div>

                <!-- Menú lateral (offcanvas) -->
                <div class="offcanvas offcanvas-end" tabindex="-1" id="menuLateral" aria-labelledby="menuLateralLabel" style="background-color:#f5ebdd;">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="menuLateralLabel">Menú</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
                    </div>

                    <div class="offcanvas-body">
                        <ul class="navbar-nav ms-auto text-start">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="HomeIndex">¿Qué es Team Lira?</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="SobreNostros">Sobre Nosotros</a>
                            </li>

                            <!-- Dropdown dentro del menú lateral -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Programas
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Programas" asp-action="AmigosCorazon">Amigos de Corazón</a></li>
                                    <li><a class="dropdown-item" asp-controller="Programas" asp-action="CuidandoCompartiendo">Cuidando y Compartiendo la Mesa</a></li>
                                    <li><a class="dropdown-item" asp-controller="Programas" asp-action="EquipoDifusion">Equipo de Difusión</a></li>
                                    <li><a class="dropdown-item" asp-controller="Programas" asp-action="ManosTierraVida">Manos de Tierra y Vida</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
